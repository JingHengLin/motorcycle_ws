<?xml version="1.0"?>
<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find motorcycle_control)/config/motorcycle_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/motorcycle" args="joint_state_controller
					  wheel_front_joint_velocity_controller
					  wheel_back_joint_velocity_controller"/>

</launch>
